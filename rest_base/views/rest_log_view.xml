<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_rest_log_tree" model="ir.ui.view">
        <field name="name">rest.log.tree</field>
        <field name="model">rest.log</field>
        <field name="priority" eval="2"/>
        <field name="arch" type="xml">
            <tree string="Logs">
                <field name="name"/>
                <field name="rest_api_id"/>
                <field name="endpoint_url"/>
                <field name="message"/>
                <field name="state"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="view_rest_log_form" model="ir.ui.view">
        <field name="name">rest.log.form</field>
        <field name="model">rest.log</field>
        <field name="priority" eval="2"/>
        <field name="arch" type="xml">
            <form string="Log">
                <sheet>
                    <div class="oe_title oe_left">
                        <div class="oe_edit_only">
                            <label for="name"/>
                        </div>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="rest_api_id"/>
                            <field name="endpoint_url"/>
                            <field name="method"/>
                        </group>
                        <group>
                            <field name="create_date"/>
                            <field name="headers"/>
                            <field name="data"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="page_message" string="Message">
                            <group>
                                <field name="state"/>
                                <field name="message"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_rest_log" model="ir.actions.act_window">
        <field name="name">Logs</field>
        <field name="res_model">rest.log</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_rest_log_tree"/>
    </record>

    <record id="action_view_rest_log_tree" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="action_rest_log"/>
        <field name="sequence" eval="2"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_rest_log_tree"/>
    </record>

    <record id="action_view_rest_log_form" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="action_rest_log"/>
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_rest_log_form"/>
    </record>

    <menuitem action="action_rest_log" name="Logs" id="menu_rest_log" parent="menu_rest" sequence="20" groups="base.group_system"/>
</odoo>